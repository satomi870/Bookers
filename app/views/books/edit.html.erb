<h1>Editing Book</h1>
<%if @book.errors.any?%>
<%=@book.errors.count%>errors
<ul>
    <%@book.errors.full_messages.each do |message|%>
    <li><%=message%></li>
    <%end%>
</ul>
<%end%>
<%=form_with model:@book,url:book_path(@book.id),method: :patch do |f|%>

<div class="field">
<label for="book_title">Title</label><br>
<%=f.text_field:title%><br>
</div>

<div class="field">
<label for="book_body">Body</label><br>
<%=f.text_area:body%><br>
</div>

<%=f.submit"Update Book"%>

<%end%>

<%=link_to "show",book_path(@book.id),class:"link"%>
<%=link_to "back","/books",class:"link"%>