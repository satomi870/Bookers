<%= flash[:notice]%>

<h1 class="books">Books</h1>



<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <%@books.each do |book|%>
    <tbody>
        <tr>
            <td><%=book.title%></td>
            <td><%=book.body%></td>
         <td><span><%=link_to "show",book_path(book.id),class:"link"%></span></td>
         <td><span><%=link_to"Edit",edit_book_path(book.id),class:"link"%></span></td>
         <td><span><%=link_to"Destroy",book_path(book.id),class:"link",method: :delete,"data-confirm"=>"Are you sure?"%></span></td>


        </tr>
    </tbody>
    <% end %>
</table>

<h2>New book</h2>
<%if @book.errors.any?%>
<%=@book.errors.count%>Errors
<ul>
    <%@book.errors.full_messages.each do |message|%>
    <li><%=message%></li>
    <%end%>
</ul>
<%end%>


<%=form_with model:@book do |f| %>

<div class="field">
<label for=“book_title”>Title</label><br>
<%=f.text_field:title%><br>
</div>

<div class="field">
<label for=“book_body”>Body</label><br>
<%=f.text_area:body%><br>
</div>

<%=f.submit'Create Book'%>




<%end%>


